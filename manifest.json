{
  "manifest_version": 3,
  "name": "Find On Spotify",
  "description": "",
  "version": "1.0",
  "action": {
    "default_popup": "/views/default.html"
  },
  "background": {
    "service_worker": "scripts/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["scripts/utils/debounce.js", "scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "identity",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/messageHandler.js", "scripts/playlistMenu.js", "views/contextMenu.html", "views/contextMenuBtn.html", "views/images/spotifyLogo.png", "views/images/plusIcon.png", "views/images/playIcon.png", "views/images/pauseIcon.png"],
      "matches": ["<all_urls>"]
    }
  ]
  }